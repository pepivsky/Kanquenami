<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item> <!-- Color del botón en estado normal. -->
        <item name="colorControlHighlight">@color/colorPrimary</item> <!-- Color al pulsar el botón -->
        <item name="android:textColor">@color/colorBlanco</item> <!-- Color del texto del botón -->
    </style>
</resources>
